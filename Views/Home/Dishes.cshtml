<div class="container">
    <div class="row">
        <h1 class= "col-sm-2" ><a href="/">Chefs </a></h1>
        <h1 class = "col-sm-1">|</h1>
        <h1 class = " col-sm-4">Dishes</h1>
        <a href="dishes/new">Add a Dish</a>
    </div>
    <table class= "table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef </th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Dish dish in ViewBag.Dishes)
            {
            <tr>
                <td>@dish.DishName</td>
                <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
            }
        </tbody>
    </table>
</div>
