@model Dish

<div class="container">
    <h1>Add a Dish!</h1>
    <a href="/">Home</a>
    <form action="add" method="post">
        <div class="form-group">
            <label asp-for="DishName" ></label>
            <input asp-for="DishName" class= "form-control">
            <span asp-validation-for="DishName" style="color: red;" ></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories" ></label>
            <input asp-for="Calories" class= "form-control">
            <span asp-validation-for="Calories" style="color: red;" ></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" ></label>
            <textarea asp-for="Description" class= "form-control"></textarea>
            <span asp-validation-for="Description" style="color: red;" ></span>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness" ></label>
            <select asp-for="Tastiness" class= "form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" style="color: red;" ></span>
        </div>
        <div class="form-group">
            <label asp-for="ChefId" ></label>
            <select asp-for="ChefId" class= "form-control">
                <option value="null"></option>
               @foreach(var c in ViewBag.ViewChefs)
               {
                <option value="@c.ChefId">@c.FirstName @c.LastName</option>
               }
                
            </select>
            <span asp-validation-for="ChefId" style="color: red;" ></span>
        </div>
        <input type="submit" class= "btn btn-primary form-control">
        
    </form>
</div>